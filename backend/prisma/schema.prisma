
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  lastName  String
  email     String   @unique
  password  String?
  googleId  String?  @unique
  roleId    Int
  role      Role     @relation(fields:[roleId], references: [id])
  registers  Register[]
  createdAt DateTime @default(now())
  groups   Group[]
  updatedAt           DateTime  @updatedAt @default(now())
  isVerified        Boolean  @default(false)
  verificationToken String?  @unique
  verificationExpires DateTime?
  topics Topic[]
}

model Role {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  users     User[]
}

model Group {
  id        Int      @id @default(autoincrement())
  title     String
  description String 
  registers Register[]
  idTutor   Int
  createdAt DateTime @default(now())
  startDate DateTime
  endDate   DateTime
  code      String  @unique
  tutor     User    @relation(fields: [idTutor], references: [id])
  dropped    Boolean @default(false)
  droppedDate DateTime @default(now())
  topics GroupTopic[]
}

model Register{
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  userId    Int
  groupId   Int
  user      User     @relation(fields: [userId], references: [id])
  group     Group    @relation(fields: [groupId], references: [id])
}



model Topic {
  id Int @id @default(autoincrement())
  tutor User @relation(fields: [idTutor], references: [id])
  idTutor Int
  title String
  description String
  createdAt DateTime @default(now())
  startDate DateTime
  endDate DateTime
  content Content[]
  groups GroupTopic[]
  contentLog ContentLog[] 
}

model Content {
  id Int @id @default(autoincrement())
  topic Topic @relation(fields: [idTopic], references: [id])
  idTopic Int 
  title String
  type String
  statement String?
  urlSource String?
  urlView String?
  createAt DateTime @default(now())
}
model ContentLog{
  id Int @id @default(autoincrement())
  topic Topic @relation(fields: [idTopic], references: [id])
  idTopic Int 
  title String
  type String
  statement String?
  urlSource String?
  urlView String?
  createAt DateTime @default(now())
}

model GroupTopic {
  id        Int   @id @default(autoincrement())
  group     Group @relation(fields: [groupId], references: [id])
  groupId   Int
  topic     Topic @relation(fields: [topicId], references: [id])
  topicId   Int
  createAt DateTime @default(now())

  @@unique([groupId, topicId])
}